<?xml version="1.0"?>
<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="5" name="Recovery">
      <Sequence>
        <ComputePathToPose goal="{goal}" path="{path}" error_code_id="{compute_path_error}"/>
        <FollowPath path="{path}" error_code_id="{follow_path_error}"/>
      </Sequence>
      <ClearEntireCostmap name="ClearCostmap" service_name="global_costmap/clear_entirely_global_costmap"/>
    </RecoveryNode>
  </BehaviorTree>
</root>